# Copy to .env and set real values for local development
FLASK_ENV=production
SECRET_KEY=change-this-secret
# Use sqlite file within instance/ for local dev
DATABASE_URL=sqlite:///instance/attendance.db
# Or a Postgres URL in production, e.g.
# DATABASE_URL=postgresql+psycopg2://user:pass@host:5432/dbname

# Where to store uploads; ensure writable in production
UPLOAD_FOLDER=uploads
